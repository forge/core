			<fileset dir="src/main/resources">
				<include name="LICENSE.txt" />
				<include name="README.txt" />
				<include name="copyright.txt" />
			</fileset>
			<fileset dir="src/main/resources">
				<include name="bin/**" />
			</fileset>
			<fileset dir="src/main/resources">
				<include name="docs/**" />
			</fileset>
		</copy>
		<chmod perm="+x">
			<fileset dir="${output.dir}/bin">
				<include name="**/*" />
			</fileset>
		</chmod>
		<fixcrlf file="${output.dir}/bin/forge" eol="unix" />
	</target>

